<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile_dialog"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sample_logo" />

        <LinearLayout
            android:id="@+id/text_dalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_in_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akhmad Fauzi"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_post_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Post" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_content_desc_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write something..."
        android:background="@color/transparant"
        android:autofillHints="About this content"
        android:inputType="textMultiLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/input_photo_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_a_photo_24" />

        <ImageView
            android:id="@+id/attach_file_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/input_photo_dialog"
            android:src="@drawable/ic_baseline_attach_file_24" />

        <ImageView
            android:id="@+id/more_menu_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_more_vert_24" />

    </RelativeLayout>
</LinearLayout>
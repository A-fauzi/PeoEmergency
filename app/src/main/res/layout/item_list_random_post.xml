<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_photo_profile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sample_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_photo_profile"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akhmad Fauzi | "
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/ic_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/round_location_on_20"/>
                <TextView
                    android:id="@+id/item_location_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jakarta"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <TextView
                android:id="@+id/item_description_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_cardView_content_random_post"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/item_image_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sample_logo" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/item_date_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 mar 2022 | 07:00 wib"
                android:textColor="@color/black"
                android:layout_gravity="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/item_to_comment_post"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_chat_bubble_outline_24"
                    android:foreground="?attr/selectableItemBackground"/>

                <ImageButton
                    android:id="@+id/item_to_like_post"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:foreground="?attr/selectableItemBackground"/>

                <ImageButton
                    android:id="@+id/item_to_share_post"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_share_24"
                    android:foreground="?attr/selectableItemBackground"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#32000000" />


</LinearLayout>
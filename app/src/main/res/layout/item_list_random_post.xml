<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo_random_post"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sample_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_photo_random_post"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_and_date_random_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username | 24 mar" />

            <TextView
                android:id="@+id/descript_random_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_content_random_post"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/media_random_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sample_logo" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_mode_comment_24" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_favorite_border_24" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_share_24" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#32000000" />


</LinearLayout>